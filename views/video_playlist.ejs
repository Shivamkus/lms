 <body>
     <main class="container">
            <section class="main-video">

             <video src="/uploads/videos/" controls autoplay muted></video>
             

         </section>
 
         <section class="video-playlist">
            
             <h3 class="title">Title of Video Playlist</h3>
             <p>10 lessions &nbsp; . &nbsp; 50m 48s</p>
             <div class="videos">
 
             </div>
         </section>

         <section class="comments" style="width: 100%;">
   <form action="/addComments" method="post" class="add-comment" >
      <h3>add comments</h3>
      <textarea name="comment_box" placeholder="enter your comment" required maxlength="1000" cols="10" rows="10" style="height: 50px;"></textarea>
      <input type="hidden" name="userName" value="<%=userName%>">
      <input type="hidden" name="userEmail" value="<%=userEmail%>">
      <input type="submit" value="add comment" class="inline-btn" name="add_comment">
   </form>
   <div class="box-container" style="margin-top: -30px;">

   <% if (comments.length > 0) { %>
      <ul>
      <% comments.forEach(comment => { %>
      <li style="list-style: none;">
      <div class="box">
         <div class="user">
            <img src="images/pic-1.jpg" alt="">
            <div>
               <h3><%=comment.userName %>  <small><%=comment.userEmail %></small></h3>
               <span><%= comment.createdAt %></span>
            </div>
         </div>
         <div class="comment-box"><%= comment.commentBox %></div>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
      <p>No comments available.</p>
    <% } %>
