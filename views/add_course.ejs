<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>tutor profile</title>

   <!-- font awesome cdn link  -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

   <!-- custom css file link  -->
   <link rel="stylesheet" href="css/style.css">

</head>
<body>

<header class="header">
   
   <section class="flex">

      <a href="/home" class="logo">Educa.</a>

      <form action="search.html" method="post" class="search-form">
         <input type="text" name="search_box" required placeholder="search courses..." maxlength="100">
         <button type="submit" class="fas fa-search"></button>
      </form>

      <div class="icons">
         <div id="menu-btn" class="fas fa-bars"></div>
         <div id="search-btn" class="fas fa-search"></div>
         <div id="user-btn" class="fas fa-user"></div>
         <div id="toggle-btn" class="fas fa-sun"></div>
      </div>

      <div class="profile">
         <img src="images/pic-1.jpg" class="image" alt="">
         <% if (isTeacherAuthenticated) { %>
            <h3 class="name"><%= teacherName %></h3>
            <% } else { %>
                    <h3 class="name">teacher</h3>
               <% } %>   
                     <p class="role">teacher</p>
         <a href="/teachers/profile" class="btn">view profile</a>
         <div class="flex-btn">
                    
            <% if (isTeacherAuthenticated) { %>
               <!-- If the user is authenticated, display logout button -->
               <a href="/teachers/logout" class="option-btn">logout</a>
           <% } else { %>
               <!-- If the user is not authenticated, display login and register buttons -->
               <div class="flex-btn">
                   <a href="/teachers/login" class="option-btn">login</a>
                   <a href="/teachers/signup" class="option-btn">register</a>
               </div>
           <% } %>

         </div>
      </div>

   </section>

</header>  


<div class="side-bar">

   <div id="close-btn">
      <i class="fas fa-times"></i>
   </div>

   <div class="profile">
      <img src="images/pic-1.jpg" class="image" alt="">
      <% if (isTeacherAuthenticated) { %>
         <h3 class="name"><%=teacherName %></h3>
         <p class="role">teacher</p>

         <% } %>    
      <a href="/teachers/profile" class="btn">view profile</a>
   </div>

   <nav class="navbar">
      <a href="/teachers/home"><i class="fas fa-home"></i><span>home</span></a>
      <a href="/teachers/about"><i class="fas fa-question"></i><span>about</span></a>
      <a href="/teachers/courses"><i class="fas fa-graduation-cap"></i><span>courses</span></a>
      <a href="/addCourse"><i class="fas fa-plus"></i><span>add courses</span></a>
      <a href="/teachers"><i class="fas fa-chalkboard-user"></i><span>teachers</span></a>
      <a href="/teachers/contact"><i class="fas fa-headset"></i><span>contact us</span></a>
   </nav>

</div> 



<section class="form-container">
    <form action="/addStudent" method="POST" >
        <h3>ADD Student</h3>

       <!-- <h3>register now</h3> -->
       <p>student name <span>*</span></p>
       <input type="text" name="name" placeholder="enter student name" required maxlength="50" class="box">
       <p>student email <span>*</span></p>
       <input type="email" name="email" placeholder="enter student email" required maxlength="50" class="box">
       <p>student roll No. <span>*</span></p>
       <input type="text" name="roll" placeholder="enter roll No. name" required maxlength="50" class="box">
       <p>student password <span>*</span></p>
       <input type="password" name="password" placeholder="enter student password" required maxlength="20" class="box">
       <p>confirm password <span>*</span></p>
       <input type="password" name="confirm_password" placeholder="confirm student password" required maxlength="20" class="box">
       <input type="submit" value="register new " name="submit" class="btn">
    </form>
 
 </section>

 <section class="form-container">
    <form action="/uploads" method="POST" enctype="multipart/form-data" >
        <h3>ADD Courses</h3>
        <p>course name <span>*</span></p>
       <input type="text" name="name" placeholder="enter your name"  maxlength="50" class="box">
       <p>ADD file <span>*</span></p> 
       <p>upload image file here <span>*</span></p>
     <input type="file" accept="image/*" name="course"  class="box">
     <p>upload video file here <span>*</span></p>
     <input type="file" accept="video/*" name="course"  class="box">
     <p>upload pdf file here <span>*</span></p>
     <input type="file" accept="pdf/*" name="course"  class="box">

       <input type="submit" value="ADD Courses" name="submit" class="btn">
    </form>
 
 </section>

 <section class="form-container">
    <form action="/addTest" method="POST" enctype="multipart/form-data">
        <h3>ADD Test</h3>

       <!-- <h3>register now</h3> -->
       <p>Test name <span>*</span></p>
       <input type="text" name="name" placeholder="enter your name" required maxlength="50" class="box">
       <p>add test image/ pdf <span>*</span></p>
       <input type="file" name="test" required class="box">
       <input type="submit" value="ADD Test" name="submit" class="btn">
    </form>
 
 </section>

 






<footer class="footer">


</footer>

<!-- custom js file link  -->
<script src="js/script.js"></script>

   
</body>
</html>